@{
    ViewData["Title"] = "Payment Page";
}

<div class="container text-center mt-5">
    <h2 class="mb-4">Complete Your Payment</h2>
    <p class="text-muted">Please complete your payment securely through Paymob below.</p>

    <iframe src="@ViewBag.PaymentUrl"
            width="450"
            height="600"
            frameborder="0"
            allowfullscreen>
    </iframe>

    <div class="mt-4">
        <a href="@Url.Action("Index", "PaymentMvc")" class="btn btn-secondary">Back to Home</a>
    </div>
</div>
